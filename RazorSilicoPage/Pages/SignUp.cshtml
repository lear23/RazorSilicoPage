@page
@model RazorSilicoPage.Pages.SignUpModel
@{
    ViewData["Title"] = Model.PageTitle;
    
}
<link rel="stylesheet" href="~/css/signUp.css" asp-append-version="true" />

<section id="createAccount">
    <div class="container">
        <form method="post" >
            <h1>Create Account</h1>
            <p class="text-xs">Already have an acount? <a asp-page="/SignIn">Sign in here.</a></p>
     
              <div class="box">
                  <div class="boxAlert">
                    <label asp-for="@Model.Form.FirstName"></label>
                    <span asp-validation-for="@Model.Form.FirstName"></span>
                  </div>                  
                  <input asp-for="@Model.Form.FirstName">
               
              </div>
              <div class="box">
                <div class="boxAlert">
                   <label asp-for="@Model.Form.LastName"></label>
                   <span asp-validation-for="@Model.Form.LastName"></span>
                </div>
                  <input asp-for="@Model.Form.LastName" >
                 
              </div>
        
            <div class="box">
                <div class="boxAlert">
                    <label asp-for="@Model.Form.Email"></label>
                    <span asp-validation-for="@Model.Form.Email"></span>
                </div>
                <input asp-for="@Model.Form.Email" >
             
            </div>
            <div class="box">
                 <div class="boxAlert">
                    <label asp-for="@Model.Form.Password"></label>
                     <span asp-validation-for="@Model.Form.Password"></span>
                </div>
                <input asp-for ="@Model.Form.Password">
               
            </div>
            <div class="box">
                 <div class="boxAlert">
                     <label asp-for="@Model.Form.ConfirmPassword"></label>
                     <span asp-validation-for="@Model.Form.ConfirmPassword"></span>
                </div>
                <input asp-for="@Model.Form.ConfirmPassword" >
             
            </div>
            <div class="boxAlert">
                <div class="boxAlert">
                    <label>
                        <input asp-for="@Model.Form.Terms" type="checkbox"> I agree to the <a asp-page="#">Terms</a> & <a asp-page="#">Conditions</a>
                    </label>
                    <span class="alert-error" asp-validation-for="@Model.Form.Terms"></span>
                </div>            
           
             
            </div>
            <button type="submit" class="btn-theme">Sign Up</button>
        </form>

    </div>

</section>

